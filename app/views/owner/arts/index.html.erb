<div>
<h1>My Listings</h1>
<h1><%= link_to 'New', new_owner_art_path %></h1>
<h1><%= link_to 'Back', arts_path %></h1>
<h1><%= link_to 'Active Rentals', rentals_path %></h1>
</div>
<div class=container>
  <div class="row justify-content-center">
    <% if @arts.empty? %>
      <h1>I am poor ðŸ˜“</h1>
    <% else %>
      <% @arts.each do |art| %>
      <div class="col-3">
        <div class="art-card" style="border: 1px solid black">
          <p>Name: <%= art.name %></p>
          <p>Price: <%= art.price %> $</p>
          <p>Artist: <%= art.artist %></p>
          <%= link_to owner_art_path(art), method: :delete, data: {confirm: 'Sure babydoll?'} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
          <hr>
          <%= link_to 'Update', edit_owner_art_path(art) %>
          <hr>
          <%= link_to 'See Art', owner_art_path(art) %>
        </div>
      </div>
      <% end %>
      <% end %>
  </div>
</div>
