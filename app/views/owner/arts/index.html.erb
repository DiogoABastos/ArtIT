
<h1 class="headers">My Listings</h1>


<div class="container">
  <div class="row justify-content-center">
    <% @arts.each do |art| %>
      <div class="col-4">
        <div class="card space">
          <div class="view overlay">
            <img class="card-img-top" src="https://mdbootstrap.com/img/Mockups/Lightbox/Thumbnail/img%20(67).jpg"
              alt="Card image cap">
            <a href="#!">
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <div class="card-body card-scroll">
            <h4 class="card-title"><%= art.name %></h4>
            <p class="card-text" style=" font-size: 14px; margin: 10px;"><%= art.artist %></p>
            <p class="card-text" style="font-size: 14px; margin: 10px; padding-bottom: 12px;"><%= count_stars(art) %></p>
            <%= link_to 'Show Art', owner_art_path(art), class: 'btn btn-warning' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
