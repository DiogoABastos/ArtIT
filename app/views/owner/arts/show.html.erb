<div class="row">
  <div class="col-6 mega-scroll mega-flex" style="padding: 50px;">
    <%= link_to 'ðŸ”™', owner_arts_path, class: 'arrow' %>
    <h1 style="text-align: center; font-weight: bold; padding-bottom: 30px; padding-top: 0"><%= @art.name.capitalize %></h1>
    <br>
    <%= photo(@art) %>
    <br>
    <p style="text-align: justify; overflow-wrap: break-word; margin-top: 20px;"><%= @art.description %></p>
    <br>
    <br>
    <% if has_reviews?(@art) %>
      <h2>Reviews</h2>
      <hr>
      <% @art.reviews.each do |review| %>
        <h3><%= review.user.username %></h3>
        <p><%= review.description %> </p>
        <p><%= stars(review.rating) %></p>
        <hr>
      <% end %>
    <% else %>
      <h2>No Reviews</h2>
    <% end %>
  </div>
  <div class="col-6">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>

