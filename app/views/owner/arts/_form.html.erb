<div style="background-image: url(<%= image_path('home_art.png') %>); height: 120vh">
  <div class="container-form">
    <div class="from-create-art">
   <h1 style="text-align: center; padding: 25px 0; letter-spacing: 3px;">List your Art to rent</h1>
    <%= simple_form_for [owner, art] do |f| %>
      <%= f.select :style, ['sculpture', 'painting', 'tapestry', 'relics'], :prompt => 'Choose the type of art'%>
      <%= f.select :era, ['renessaince', 'modern', 'art deco', 'classic', 'new age', 'middle eastern', 'romantism', 'comtemporary'], :prompt => 'Select Era of your Art' %>
      <%= f.input :name %>
      <%= f.input :artist %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :description %>
      <div class="d-flex">
        <div>
          <%= f.input :photo, as: :file %>
        </div>
        <div class="text-right">
          <%= f.submit class: 'button-create'%>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
