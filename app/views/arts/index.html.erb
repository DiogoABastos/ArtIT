

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dsgxgstvy/image/upload/v1582638749/igor-miske-oLhTLD-RBsc-unsplash_p30ju4.jpg);">
  <div class="container">
    <h1>Art has never been so easy accessible</h1>
    <p>Rent Art for your home, office, or event. Search 1000's of art pieces near you today</p>
    <button class="find-art">Find Art</button>
  </div>
</div>
<div class="container art-cards">
  <div class="row justify-content-center">
    <% @arts.each do |art| %>
    <div class="col-4">
      <div class="art-card" style="border: 1px solid black">
        <p>Name: <%= art.name %></p>
        <p>Price: <%= art.price %> $</p>
        <p>Artist: <%= art.artist %></p>
        <%= link_to 'See Art', art_path(art) %>
      </div>
    </div>
    <% end %>
  </div>
</div>
