
<div class="container" style="padding-bottom: 120px">
  <div class="row">
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dsgxgstvy/image/upload/v1582638749/igor-miske-oLhTLD-RBsc-unsplash_p30ju4.jpg);">
  <div class="container">
    <h1>Art has never been so easy</h1>
    <p>Rent Art for your home, office, or event. Search 1000's of art pieces near you today</p>
    <button class="find-art">Find Art</button>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @arts.each do |art| %>
      <div class="col-6 padding-small" >
        <div class="card-product" style="border: 1px grey">
          <div class="card-picture">
            <img class="card-product" src="https://images.artnet.com/aoa_lot_images/129903/keith-haring-untitled-from-pop-shop-ii-prints-and-multiples.jpg" />
          </div>
          <div class="card-product-infos">
              <div class="card-texts">
                <p><%= art.artist %></p>
                <p style="font-style: italic;"><%= art.name %></p>
                <p><strong>Rent from <%= art.price %>$/month</strong></p>
              </div>
              <%= link_to 'See Rental Options', art_path(art), class: 'btn btn-warning' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
