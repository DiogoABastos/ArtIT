<h1><%= @art.name %></h1>

<p><%= @art.description %></p>
<p><%= @art.user.username %></p>
<p><%= @art.price %></p>
<hr>
<%= link_to 'Add Review', new_art_review_path(@art) %>
<hr>
<%= link_to 'Go Back', arts_path %>
<hr>
<% if @art.available %>
  <%= link_to 'Rent', new_art_rental_path(@art) %>
<% else %>
  <p>Rented</p>
<% end %>

<h1>Reviews</h1>
<div>
  <% @art.reviews.each do |review| %>
    <%= review.description %>,
    <%= review.rating %> stars,
    <%= review.user.username %>
    <%= link_to 'Edit', edit_art_review_path(@art, review) %>
    <hr>
  <% end %>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
