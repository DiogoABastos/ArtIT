<h1 class="headers">My Rentals</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Art Name</th>
      <th>Owner</th>
      <th>Start</th>
      <th>End</th>
      <th>Total Days</th>
      <th>Price / night</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @rentals.each do |rental| %>
      <tr scope="row">
        <td><%= rental.art.name %></td>
        <td><%= rental.art.user.username %></td>
        <td><%= rental.rental_start %></td>
        <td><%= rental.rental_end %></td>
        <td><%= num_days(rental.rental_start, rental.rental_end) %></td>
        <td><%= numbers(rental.art.price) %> $</td>
        <td><%= total_price(rental.art, rental.rental_start, rental.rental_end) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

